<<comm1
      Write a user defined function to find the reverse of a given number and return it
comm1
reverse_number() {
    local num=$1
    local rev=0
    local remainder

    while [ $num -gt 0 ]; do
        remainder=$(( num % 10 ))
        rev=$(( (rev * 10) + remainder ))
        num=$(( num / 10 ))
    done
    echo $rev
}
read -p "Enter a number: " input_num
result=$(reverse_number $input_num)
echo "The reversed number is: $result"
